<script>
function enterSite() { document.getElementById('welcome-screen').style.display='none'; showSection('energy-produced'); }
function showSection(id){ document.querySelectorAll('section').forEach(s=>s.style.display='none'); document.getElementById(id).style.display='block'; }

let notificationsEnabled=false;
function toggleNotifications(){ notificationsEnabled=!notificationsEnabled; const btn=document.querySelector('.notification-toggle'); btn.textContent=notificationsEnabled?'Disable Notifications':'Enable Notifications'; alert('Notifications '+(notificationsEnabled?'Enabled':'Disabled')); }

function setTheme(theme){ document.body.className=theme;
 if(theme==='greenEco') document.body.style.background='linear-gradient(to bottom, #a8e6cf, #dcedc1)';
 else if(theme==='blueFlowers') document.body.style.background='linear-gradient(to bottom, #bbdefb, #90caf9)';
 else if(theme==='sunEnergy') document.body.style.background='linear-gradient(to bottom, #fff3e0, #ffe0b2)';
}

function weatherAlert(){ const alertText=document.getElementById('weather-alert'); const isSunny=Math.random()>0.3; alertText.textContent=isSunny?'Sunny day! Use solar panels to store maximum energy.':'Cloudy or rainy day. Reduce usage to save energy.';}
weatherAlert();

const producedChart = new Chart(document.getElementById('producedChart').getContext('2d'), { type:'bar', data:{ labels:['6AM','9AM','12PM','3PM','6PM','9PM'], datasets:[{label:'Energy Produced (kWh)', data:[1,3,5,2,0.5,0], backgroundColor:'#4caf50'}]}, options:{responsive:true} });
const usedChart = new Chart(document.getElementById('usedChart').getContext('2d'), { type:'line', data:{ labels:['6AM','9AM','12PM','3PM','6PM','9PM'], datasets:[{ label:'Energy Used (kWh)', data:[0.5,1,2,3,1,0.5], borderColor:'#ff9800', backgroundColor:'rgba(255,152,0,0.2)', fill:true, tension:0.3 }]}, options:{responsive:true} });
const forecastChart = new Chart(document.getElementById('forecastChart').getContext('2d'), { type:'line', data:{ labels:['6AM','9AM','12PM','3PM','6PM','9PM'], datasets:[{ label:'Forecast Energy (kWh)', data:[1,2.5,4,2,1,0.2], borderColor:'#2196f3', backgroundColor:'rgba(33,150,243,0.2)', fill:true, tension:0.3 }]}, options:{responsive:true} });
const historyChart = new Chart(document.getElementById('historyChart').getContext('2d'), { type:'bar', data:{ labels:['Mon','Tue','Wed','Thu','Fri','Sat','Sun'], datasets:[{ label:'Daily Energy Used (kWh)', data:[8,7,9,6,8,7,5], backgroundColor:'#ff9800' },{ label:'Daily Energy Produced (kWh)', data:[12,11,13,10,12,11,9], backgroundColor:'#4caf50' }]}, options:{responsive:true,scales:{ y:{ beginAtZero:true } } } });
</script>

